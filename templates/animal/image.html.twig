{% form_theme formImage 'bootstrap_5_layout.html.twig' %}
{% block body %}

    <h3>page des images du animal {{ animal.name }}</h3>
    {% include 'image/image_or_not_image.html.twig' with {object:animal} %}
    <h3>ajouter une image</h3>

    {{ form_start(formImage, {attr:{action:path('add_animal_image', {id:animal.id})}}) }}
    {{ form_row(formImage.imageFile) }}
    <button type="submit" class="btn btn-success">upload</button>
    {{ form_end(formImage) }}




{% endblock %}

